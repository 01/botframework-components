{
  "type": "AdaptiveCard",
  "id": "PointOfInterestOverviewDetailsCard",
  "body": [
    {
      "type": "Container",
      "backgroundImage": {
        "url": "${if(Data.PointOfInterestImageUrl == null, '', Data.PointOfInterestImageUrl)}",
        "verticalAlignment": "Center",
        "horizontalAlignment": "Center"
      },
      "bleed": true,
      "minHeight": "100px"
    },
    {
      "type": "TextBlock",
      "id": "Name",
      "horizontalAlignment": "Left",
      "spacing": "None",
      "size": "Medium",
      "weight": "Bolder",
      "color": "Accent",
      "text": "${if(Data.Name == null, '', Data.Name)}"
    },
    {
      "type": "TextBlock",
      "id": "Category",
      "spacing": "None",
      "color": "default",
      "text": "${if(Data.Category == null, '', Data.Category)}"
    },
    {
      "type": "TextBlock",
      "id": "Address",
      "spacing": "None",
      "color": "default",
      "text": "${if(Data.Address == null, '', Data.Address)}",
      "wrap": true,
      "maxLines": 2
    },
    {
      "type": "TextBlock",
      "id": "Hours",
      "spacing": "None",
      "color": "default",
      "text": "${if(Data.Hours == null, '', Data.Hours)}",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "id": "Phone",
      "spacing": "None",
      "color": "default",
      "text": "${if(Data.Phone == null, '', concat('Phone: ', Data.Phone))}",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "id": "Website",
      "spacing": "None",
      "color": "default",
      "text": "${if(Data.Website == null, '', concat('Website: ', Data.Website))}",
      "wrap": true
    }
  ],
  "selectAction": {
    "type": "Action.Submit",
    "data": "${if(Data.SubmitText == null, '', Data.SubmitText)}"
  },
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}
