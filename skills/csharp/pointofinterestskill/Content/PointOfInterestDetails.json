{
  "type": "AdaptiveCard",
  "id": "PointOfInterestDetailsCard",
  "backgroundImage": "data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABgAAAASCAIAAADOjonJAAAAAXNSR0IArs4c6QAAAARnQU1BAACxjwv8YQUAAAAJcEhZcwAAEnQAABJ0Ad5mH3gAAAAVSURBVDhPYxgFo2AUjIJRgBUwMAAABSIAAYb8Bp0AAAAASUVORK5CYII=",
  "body": [
    {
      "type": "Container",
      "bleed": true,
      "items": [
        {
          "type": "ColumnSet",
          "bleed": true,
          "columns": [
            {
              "type": "Column",
              "bleed": true,
              "items": [
                {
                  "type": "Image",
                  "horizontalAlignment": "center",
                  "url": "${if(Data.PointOfInterestImageUrl == null, '', Data.PointOfInterestImageUrl)}"
                }
              ]
            },
            {
              "type": "Column",
              "bleed": true,
              "items": [
                {
                  "type": "TextBlock",
                  "id": "Name",
                  "horizontalAlignment": "Left",
                  "spacing": "None",
                  "size": "Medium",
                  "weight": "Bolder",
                  "color": "light",
                  "text": "${if(Data.Name == null, '', Data.Name)}"
                },
                {
                  "type": "TextBlock",
                  "id": "Address",
                  "spacing": "None",
                  "color": "light",
                  "text": "${if(Data.Address == null, '', Data.Address)}",
                  "wrap": true,
                  "maxLines": 2
                },
                {
                  "type": "ColumnSet",
                  "columns": [
                    {
                      "type": "Column",
                      "width": "stretch",
                      "items": [
                        {
                          "type": "TextBlock",
                          "id": "Phone",
                          "spacing": "None",
                          "color": "light",
                          "text": "${if(Data.Phone == null, '', Data.Phone)}",
                          "wrap": true
                        }
                      ]
                    },
                    {
                      "type": "Column",
                      "width": "auto",
                      "items": [
                        {
                          "type": "TextBlock",
                          "id": "Hours",
                          "spacing": "None",
                          "color": "light",
                          "text": "${if(Data.Hours == null, '', Data.Hours)}",
                          "wrap": true
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "bleed": true,
      "separator": true,
      "items": [
        {
          "type": "TextBlock",
          "horizontalAlignment": "Right",
          "size": "Small",
          "color": "light",
          "text": "${if(Data.ProviderDisplayText == null, '', Data.ProviderDisplayText)}"
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0",
  "speak": "${if(Data.Speak == null, '', Data.Speak)}"
}
