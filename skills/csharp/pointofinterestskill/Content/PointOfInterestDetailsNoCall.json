{
  "type": "AdaptiveCard",
  "id": "PointOfInterestDetailsNoCallCard",
  "body": [
    {
      "type": "Container",
      "bleed": true,
      "items": [
        {
          "type": "ColumnSet",
          "bleed": true,
          "columns": [
            {
              "type": "Column",
              "bleed": true,
              "items": [
                {
                  "type": "Image",
                  "horizontalAlignment": "center",
                  "url": "${if(Data.PointOfInterestImageUrl == null, '', Data.PointOfInterestImageUrl)}"
                }
              ]
            },
            {
              "type": "Column",
              "bleed": true,
              "items": [
                {
                  "type": "TextBlock",
                  "id": "Name",
                  "horizontalAlignment": "Left",
                  "spacing": "None",
                  "size": "Medium",
                  "weight": "Bolder",
                  "color": "default",
                  "text": "${if(Data.Name == null, '', Data.Name)}"
                },
                {
                  "type": "TextBlock",
                  "id": "Category",
                  "spacing": "None",
                  "color": "default",
                  "text": "${if(Data.Category == null, '', Data.Category)}"
                },
                {
                  "type": "TextBlock",
                  "id": "Address",
                  "spacing": "None",
                  "color": "default",
                  "text": "${if(Data.Address == null, '', Data.Address)}",
                  "wrap": true,
                  "maxLines": 2
                },
                {
                  "type": "TextBlock",
                  "id": "Hours",
                  "spacing": "None",
                  "color": "default",
                  "text": "${if(Data.Hours == null, '', Data.Hours)}",
                  "wrap": true
                },
                {
                  "type": "TextBlock",
                  "id": "Website",
                  "spacing": "None",
                  "color": "default",
                  "text": "${if(Data.Website == null, '', Data.Website)}",
                  "wrap": true
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "bleed": true,
      "separator": true,
      "items": [
        {
          "type": "TextBlock",
          "horizontalAlignment": "Right",
          "size": "Small",
          "color": "default",
          "text": "${if(Data.ProviderDisplayText == null, '', Data.ProviderDisplayText)}"
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0",
  "speak": "${if(Data.Speak == null, '', Data.Speak)}"
}
